{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "outDir": "dist",
        // "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "webview"
    ]
}
