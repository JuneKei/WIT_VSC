{
  "name": "wit",
  "publisher": "JuneKei",
  "displayName": "WIT (What Is This)",
  "description": "WIT (What Is This) is an extension that helps you understand code by documenting files and symbols.",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/junekei/wit_vsc.git"
  },
  "license": "Apache-2.0",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.73.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:wit.showPanel"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "db setting",
      "properties": {
        "wit.pgHost": {
          "type": "string",
          "description": "PostgreSQL 호스트 주소"
        },
        "wit.pgPort": {
          "type": "number",
          "description": "PostgreSQL 포트"
        },
        "wit.pgUser": {
          "type": "string",
          "description": "PostgreSQL 사용자 이름"
        },
        "wit.pgPassword": {
          "type": "string",
          "description": "PostgreSQL 비밀번호"
        },
        "wit.pgDatabase": {
          "type": "string",
          "description": "PostgreSQL 데이터베이스"
        },
        "wit.pgSchema": {
          "type": "string",
          "description": "PostgreSQL 스키마"
        }
      }
    },
    "commands": [
      {
        "command": "wit.showPanel",
        "title": "open wit"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "wit-panel-container",
          "title": "WIT",
          "icon": "default"
        }
      ]
    },
    "views": {
      "wit-panel-container": [
        {
          "type": "webview",
          "id": "witView",
          "name": ""
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run clean && node esbuild.js --production",
    "watch:build": "npm run clean && node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "watch": "npm-run-all -p watch:*",
    "lint": "eslint . --ext ts",
    "clean": "rimraf dist",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/pg": "^8.15.5",
    "@types/vscode": "^1.73.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.8",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.40",
    "pg": "^8.16.3",
    "rimraf": "^6.0.1"
  }
}
